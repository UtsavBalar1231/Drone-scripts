cd /drone/src/ || exit

# Anykernel3
if [[ "$@" =~ "raphael"* ]]; then
        git clone https://github.com/UtsavBalar1231/Anykernel3 --depth=1 -b master anykernel
else
        git clone https://github.com/UtsavBalar1231/Anykernel3 --depth=1 -b kona anykernel
fi

# Clone compiler
if [[ "$@" =~ "gcc"* ]]; then
	git clone --depth=1 https://github.com/mvaisakh/gcc-arm64 --depth=1 gcc64
	git clone --depth=1 https://github.com/mvaisakh/gcc-arm --depth=1 gcc32
else
	git clone https://github.com/kdrag0n/proton-clang -b master --depth=1 clang
fi
